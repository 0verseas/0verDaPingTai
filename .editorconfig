# EditorConfig is awesome: http://EditorConfig.org

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ejs,html}]
charset = utf-8
indent_style = tab
indent_size = 4
quote_type = double

[*.css]
indent_style = tab
indent_size = 4
quote_type = double

[*.js]
charset = utf-8
indent_style = tab
indent_size = 4
quote_type = single
spaces_around_operators = true

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.json]
indent_style = tab
indent_size = 4
quote_type = double

[package.json]
indent_style = space
indent_size = 2

